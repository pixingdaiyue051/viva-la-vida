    <build>
        <finalName>viva-j2se</finalName>
        <!-- 包含资源文件 -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>11</source>
                    <target>11</target>
                    <encoding>UTF-8</encoding>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>

                <configuration>
                    <archive>
                        <manifest>
                            <!-- 指定入口函数 -->
                            <mainClass>com.tequeno.netty.http.MyHttpServer</mainClass>
                            <!-- 是否添加依赖的jar路径配置 -->
                            <addClasspath>true</addClasspath>
                            <!-- 依赖的jar包存放位置 第三方jar可以跨项目通用 因此使用一个广义的文件包名字 -->
                            <classpathPrefix>/data/lib/</classpathPrefix>
                        </manifest>
                        <manifestEntries>
                            <!--
                                配置文件项目单独使用 不具备通用性 单独使用一个文件包
                                logback会使用该目录下缺省名文件logback.xml
                                springboot会使用该目录下缺省名文件application.yml
                            -->
                            <Class-Path>/data/viva-la-vida/</Class-Path>
                        </manifestEntries>
                    </archive>
                    <!-- 打包包括的内容 -->
                    <includes>
                        <include>com/tequeno/netty/*</include>
                        <include>com/tequeno/netty/http/*</include>
                    </includes>
                    <!-- 打包排除的内容 -->
                    <excludes>
                        <exclude>com/tequeno/classload/*</exclude>
                        <exclude>com/tequeno/collect/*</exclude>
                        <exclude>com/tequeno/classload/*</exclude>
                        <exclude>com/tequeno/heap/*</exclude>
                        <exclude>com/tequeno/inet/*</exclude>
                        <exclude>com/tequeno/io/*</exclude>
                        <exclude>com/tequeno/jdk8/*</exclude>
                        <exclude>com/tequeno/lottery/*</exclude>
                        <exclude>com/tequeno/lucky/*</exclude>
                        <exclude>com/tequeno/jdk8/*</exclude>
                        <exclude>com/tequeno/mq/*</exclude>
<!--                        <exclude>com/tequeno/netty/*</exclude>-->
                        <exclude>com/tequeno/num/*</exclude>
                        <exclude>com/tequeno/pattern/*</exclude>
                        <exclude>com/tequeno/str/*</exclude>
                        <exclude>com/tequeno/num/*</exclude>
                        <exclude>com/tequeno/sudoku/*</exclude>
                        <exclude>com/tequeno/superchild/*</exclude>
                        <exclude>com/tequeno/temail/*</exclude>
                        <exclude>com/tequeno/test/*</exclude>
                        <exclude>com/tequeno/thread/*</exclude>
                        <exclude>com/tequeno/thread1/*</exclude>
                        <exclude>com/tequeno/thread2/*</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
